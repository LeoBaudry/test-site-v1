---
interface Props {
  title: string;
  category: 'asia' | 'africa' | 'latino' | 'europe';
  accentColor: string;
  footerImage: string;
}

const { title, category, accentColor, footerImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Yumly</title>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="min-h-screen bg-[#F5F5F1]">
    <!-- Le header a été supprimé ici et sera ajouté dans chaque page via le composant Header.astro -->
    
    <main>
      <slot />
    </main>

  
  </body>
</html>