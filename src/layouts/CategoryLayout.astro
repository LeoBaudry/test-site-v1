---
interface Props {
  title: string;
  category: 'asia' | 'africa' | 'latino' | 'europe';
  accentColor: string;
  footerImage: string;
}

const { title, category, accentColor, footerImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Yumly</title>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="min-h-screen bg-[#F5F5F1]">
    <header class={`h-24 ${accentColor}`}>
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-4xl font-bold text-white">Yumly</a>
        <h1 class="text-3xl font-bold text-white capitalize">{category}</h1>
      </nav>
    </header>
    
    <main class="container mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="bg-black text-white relative">
      <div class="absolute -top-24 left-1/2 transform -translate-x-1/2">
        <img 
          src={footerImage || "/placeholder.svg"} 
          alt={`${category} cuisine`} 
          class="w-48 h-48 object-cover rounded-full border-4 border-white"
        />
      </div>
      <div class="container mx-auto px-6 pt-32 pb-12">
        <div class="grid grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">About Yumly</h3>
            <p class="text-gray-400">Discover authentic ethnic grocery stores near you.</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Categories</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/asia">Asia</a></li>
              <li><a href="/africa">Africa</a></li>
              <li><a href="/latino">Latino</a></li>
              <li><a href="/europe">Europe</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Contact</h3>
            <p class="text-gray-400">info@yumly.com</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>