---
import CategoryLayout from '../layouts/CategoryLayout.astro';
import RecipeCard from '../components/RecipeCard.astro';

const ingredients = [
  {
    name: "Harissa",
    description: "North African chili paste",
    image: "/images/ingredients/harissa.jpg"
  },
  {
    name: "Plantains",
    description: "Starchy fruit used in African cuisine",
    image: "/images/ingredients/plantains.jpg"
  },
  // Ajoutez plus d'ingr√©dients...
];

const recipes = [
  {
    title: "Jollof Rice",
    description: "Spicy one-pot rice dish",
    image: "/images/recipes/jollof-rice.jpg",
    ingredients: ["Rice", "Tomatoes", "Onions", "Peppers"],
    time: "1 hour"
  },
  {
    title: "Tagine",
    description: "Slow-cooked stew with meat and vegetables",
    image: "/images/recipes/tagine.jpg",
    ingredients: ["Lamb", "Apricots", "Couscous", "Spices"],
    time: "2 hours"
  },
  // Ajoutez plus de recettes...
];
---

<CategoryLayout 
  title="African Cuisine" 
  category="africa" 
  accentColor="bg-[#FFA500]" 
  footerImage="/images/footer/african-dish.jpg"
>
  <section class="mb-16">
    <h2 class="text-3xl font-bold mb-8">Essential African Ingredients</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {ingredients.map(ingredient => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img 
            src={ingredient.image || "/placeholder.svg"} 
            alt={ingredient.name}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="font-bold text-lg">{ingredient.name}</h3>
            <p class="text-gray-600">{ingredient.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section>
    <h2 class="text-3xl font-bold mb-8">Featured Recipes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recipes.map(recipe => (
        <RecipeCard {...recipe} />
      ))}
    </div>
  </section>
</CategoryLayout>