---
import CategoryLayout from '../layouts/CategoryLayout.astro';
import RecipeCard from '../components/RecipeCard.astro';

const ingredients = [
  {
    name: "Chipotle",
    description: "Smoked and dried jalapeño peppers",
    image: "/images/ingredients/chipotle.jpg"
  },
  {
    name: "Plantains",
    description: "Starchy fruit used in Latino cuisine",
    image: "/images/ingredients/plantains.jpg"
  },
  // Ajoutez plus d'ingrédients...
];

const recipes = [
  {
    title: "Tacos al Pastor",
    description: "Marinated pork tacos with pineapple",
    image: "/images/recipes/tacos-al-pastor.jpg",
    ingredients: ["Pork", "Pineapple", "Tortillas", "Cilantro"],
    time: "1 hour"
  },
  {
    title: "Arepas",
    description: "Cornmeal cakes stuffed with cheese or meat",
    image: "/images/recipes/arepas.jpg",
    ingredients: ["Cornmeal", "Cheese", "Beef", "Avocado"],
    time: "45 mins"
  },
  // Ajoutez plus de recettes...
];
---

<CategoryLayout 
  title="Latino Cuisine" 
  category="latino" 
  accentColor="bg-[#FFD700]" 
  footerImage="/images/footer/latino-dish.jpg"
>
  <section class="mb-16">
    <h2 class="text-3xl font-bold mb-8">Essential Latino Ingredients</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {ingredients.map(ingredient => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img 
            src={ingredient.image || "/placeholder.svg"} 
            alt={ingredient.name}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="font-bold text-lg">{ingredient.name}</h3>
            <p class="text-gray-600">{ingredient.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section>
    <h2 class="text-3xl font-bold mb-8">Featured Recipes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recipes.map(recipe => (
        <RecipeCard {...recipe} />
      ))}
    </div>
  </section>
</CategoryLayout>
