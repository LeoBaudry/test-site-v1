---
import CategoryLayout from '../layouts/CategoryLayout.astro';
import RecipeCard from '../components/RecipeCard.astro';

const ingredients = [
  {
    name: "Gochugaru",
    description: "Korean red pepper flakes",
    image: "/images/ingredients/gochugaru.jpg"
  },
  // Add more ingredients...
];

const recipes = [
  {
    title: "Kimchi Jjigae",
    description: "Spicy Korean stew with kimchi and tofu",
    image: "/images/recipes/kimchi-jjigae.jpg",
    ingredients: ["Kimchi", "Tofu", "Gochugaru", "Pork belly"],
    time: "45 mins"
  },
  // Add more recipes...
];
---

<CategoryLayout 
  title="Asian Cuisine" 
  category="asia" 
  accentColor="bg-[#FF4B4B]"
  footerImage="/images/footer/noodle-bowl.jpg"
>
  <section class="mb-16">
    <h2 class="text-3xl font-bold mb-8">Essential Asian Ingredients</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {ingredients.map(ingredient => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img 
            src={ingredient.image || "/placeholder.svg"} 
            alt={ingredient.name}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="font-bold text-lg">{ingredient.name}</h3>
            <p class="text-gray-600">{ingredient.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section>
    <h2 class="text-3xl font-bold mb-8">Featured Recipes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {recipes.map(recipe => (
        <RecipeCard {...recipe} />
      ))}
    </div>
  </section>
</CategoryLayout>